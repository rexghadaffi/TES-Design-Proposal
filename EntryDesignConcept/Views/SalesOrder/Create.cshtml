@model EntryDesignConcept.Models.SalesOrder

@{
    ViewBag.Title = "Create";
}

<h2>Create</h2>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>SalesOrder</h4>
        <hr />
        @Html.ValidationSummary(true)

        <div class="form-group">
            @Html.LabelFor(model => model.Name, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Name)
                @Html.ValidationMessageFor(model => model.Name)
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Project Manager</label>
            <div class="col-md-4">
                @Html.DropDownListFor(model => model.Manager.ID, (SelectList)ViewBag.Manager, "Select Manager", new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Manager.ID)
            </div>
        </div>


        <div class="form-group">
            <label class="control-label col-md-2">Business Unit</label>
            <div class="col-md-4">
                @Html.DropDownListFor(model => model.Organization.ID, (SelectList)ViewBag.BusinessUnit, "Select Business Unit", new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Organization.ID)
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Team</label>
            <div class="col-md-4">
                @Html.DropDownListFor(model => model.Team.ID, (SelectList)ViewBag.Team, "Select Team", new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Organization.ID)
            </div>
        </div>
        

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
